{
  "name": "localmeadow-api",
  "version": "0.0.1",
  "description": "Local Meadow MercurJS/Medusa API with custom plugins",
  "author": "Local Meadow",
  "license": "MIT",
  "keywords": [
    "sqlite",
    "postgres",
    "typescript",
    "ecommerce",
    "headless",
    "medusa"
  ],
  "scripts": {
    "build": "medusa build",
    "test": "npm run test:unit",
    "build:symlink": "medusa build && ln -s .medusa/server/public/ public",
    "build:windows": "medusa build && node -e \"const fs=require('fs');const path=require('path');const target='.medusa/server/public/';const link='public';try{if(fs.existsSync(link))fs.rmSync(link,{recursive:true,force:true});fs.symlinkSync(target,link,process.platform==='win32'?'junction':'dir');console.log('✔ Symlink created:',link,'→',target);}catch(e){console.error('✖ Failed to create symlink:',e.message);process.exit(1);}\"",
    "seed": "medusa exec ./src/scripts/seed.ts",
    "db:verify": "medusa exec ./src/scripts/verify-schema.ts",
    "init:mercurjs-schema": "medusa exec ./src/scripts/init-mercurjs-schema.ts",
    "start": "medusa start --types=false",
    "dev": "medusa develop --types=false",
    "test:integration:http": "TEST_TYPE=integration:http NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit",
    "test:integration:modules": "TEST_TYPE=integration:modules NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
    "test:unit": "TEST_TYPE=unit NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
    "format": "prettier --write .",
    "lint": "eslint ./src ",
    "lint:fix": "eslint ./src --fix ",
    "generate:oas": "medusa-oas oas --type combined --paths ./src/api"
  },
  "dependencies": {
    "@medusajs/admin-sdk": "2.13.1",
    "@medusajs/cli": "2.13.1",
    "@medusajs/framework": "2.13.1",
    "@medusajs/index": "2.13.1",
    "@medusajs/medusa": "2.13.1",
    "@mercurjs/b2c-core": "^1.5.2",
    "@mercurjs/commission": "^1.5.2",
    "@mercurjs/framework": "^1.5.2",
    "@mercurjs/payment-stripe-connect": "^1.5.2",
    "@mercurjs/requests": "^1.5.2",
    "@mercurjs/resend": "^1.5.2",
    "@mercurjs/reviews": "^1.5.2",
    "@talkjs/react": "^0.1.11",
    "resend": "^4.1.2",
    "stripe": "^17.4.0",
    "talkjs": "^0.38.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@medusajs/medusa-oas-cli": "2.13.1",
    "@medusajs/test-utils": "2.13.1",
    "@swc/core": "^1.7.28",
    "@swc/jest": "^0.2.36",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.2.25",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.3.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=20"
  }
}
